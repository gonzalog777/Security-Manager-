@model SecurityManager.Models.AppModels.ReporteAlarma

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>ReporteAlarma</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Alarma" class="control-label"></label>
                @Html.DropDownList("Alarma", new List<SelectListItem>
           {
               new SelectListItem{Text="Alarma incendio"},
               new SelectListItem{Text="Alarma llamada"},
               new SelectListItem{Text="Alarma error"}
           },"Escoger Alarma")
                @*<input asp-for="Alarma" class="form-control" />*@
                <span asp-validation-for="Alarma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Funciona" /> @Html.DisplayNameFor(model => model.Funciona)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Comentarios" class="control-label"></label>
                <input asp-for="Comentarios" class="form-control" />
                <span asp-validation-for="Comentarios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
